<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/tab2_cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/tv_list_States"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="States"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_weight="20"/>
            <TextView
                android:id="@+id/tv_list_confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/cases"
                android:fontFamily="sans-serif-light"
                android:text="Confirmed"
                android:layout_weight="20"/>
            <TextView
                android:id="@+id/tv_list_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="Active"
                android:textColor="@color/active"
                android:layout_weight="20"/>
            <TextView
                android:id="@+id/tv_list_deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:text="Deaths"
                android:textColor="@color/deaths"
                android:layout_weight="20"/>
            <TextView
                android:id="@+id/tv_list_recovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:text="Recovered"
                android:textColor="@color/recovered"
                android:layout_weight="20"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>